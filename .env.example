ACTUAL_SERVER_URL=http://localhost:5006
ACTUAL_PASSWORD=your_actual_password
ACTUAL_SYNC_ID=your_sync_id

# Local cache directory for the budget (downloaded data)
BUDGET_DIR=./data/budget
# Legacy alias for BUDGET_DIR
# BUDGET_CACHE_DIR=./data/budget

# Reconciling behavior
# Days to wait before reconciling/clearing transactions (default: 5). Set 0 for immediate.
RECONCILE_DELAY_DAYS=5

# Daemon scheduling (cron)
# Disable cron in daemon mode by setting to true
# DISABLE_CRON_SCHEDULING=false
RECONCILE_CRON=0 * * * *
RECONCILE_CRON_TIMEZONE=UTC

# Event subscription
# Set ENABLE_EVENTS=true to subscribe to an SSE stream for changes
# Provide EVENTS_URL (and optional EVENTS_AUTH_TOKEN)
# ENABLE_EVENTS=true
# EVENTS_URL=http://localhost:8080/events
# EVENTS_AUTH_TOKEN=your_token

# Logging
LOG_LEVEL=info

