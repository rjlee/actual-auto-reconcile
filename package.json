{
  "name": "actual-auto-reconcile",
  "private": true,
  "version": "1.0.0",
  "description": "Automatically clear and reconcile Actual Budget transactions",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "reconcile": "node src/index.js --mode reconcile",
    "daemon": "node src/index.js --mode daemon",
    "test": "jest --passWithNoTests",
    "test:coverage": "JEST_COVERAGE=true npm test",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint --fix --ext .js .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install || true"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@actual-app/api": "^26.2.0",
    "dotenv": "^17.2.4",
    "js-yaml": "^4.1.1",
    "node-cron": "^4.2.1",
    "pino": "^10.3.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^12.0.5",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
