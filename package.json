{
  "name": "actual-auto-reconcile",
  "private": true,
  "version": "0.1.0",
  "description": "Automatically clear and reconcile Actual Budget transactions",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "reconcile": "node src/index.js --mode reconcile",
    "daemon": "node src/index.js --mode daemon",
    "test": "jest --runInBand",
    "lint": "eslint --ext .js --max-warnings=0 .",
    "lint:fix": "eslint --fix --ext .js .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "node -e \"process.exit(process.env.HUSKY==='0'?0:1)\" || husky install"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@actual-app/api": "^25.6.1",
    "dotenv": "^16.0.0",
    "js-yaml": "^4.1.0",
    "node-cron": "^3.0.0",
    "pino": "^8.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^21.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^10.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/release-notes-generator": "^10.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
